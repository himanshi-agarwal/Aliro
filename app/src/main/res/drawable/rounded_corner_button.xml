<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#66000000" /> <!-- Shadow color -->
            <corners android:radius="12dp" />   <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Button Background Layer -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#eaedf2" />   <!-- Background color -->
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>
