<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/change_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:text="Change Password"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/registration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/change_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Reg No:" />

    <EditText
        android:id="@+id/et_registration"
        android:layout_width="319dp"
        android:layout_height="49dp"
        android:hint="Enter Registered Mobile No"
        android:inputType="number"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registration" />

    <Button
        android:id="@+id/btn_get_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/approve"
        android:text="Get OTP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_registration"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Enter OTP"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_get_otp" />



    <EditText
        android:id="@+id/otp_box_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:hint="-"
        android:inputType="number"
        android:maxLength="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:layout_constraintWidth_percent="0.2"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/otp_box_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="-"
        android:inputType="number"
        android:maxLength="1"
        app:layout_constraintStart_toEndOf="@id/otp_box_1"
        app:layout_constraintTop_toTopOf="@id/otp_box_1"
        app:layout_constraintWidth_percent="0.2"
        tools:ignore="TouchTargetSizeCheck" />


    <EditText
        android:id="@+id/otp_box_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="-"
        android:inputType="number"
        android:maxLength="1"
        app:layout_constraintStart_toEndOf="@id/otp_box_2"
        app:layout_constraintTop_toTopOf="@id/otp_box_1"
        app:layout_constraintWidth_percent="0.2"
        tools:ignore="TouchTargetSizeCheck" />


    <EditText
        android:id="@+id/otp_box_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="-"
        android:inputType="number"
        android:maxLength="1"
        app:layout_constraintStart_toEndOf="@id/otp_box_3"
        app:layout_constraintTop_toTopOf="@id/otp_box_1"
        app:layout_constraintWidth_percent="0.2"
        tools:ignore="TouchTargetSizeCheck" />


    <androidx.constraintlayout.widget.Group
        android:id="@+id/otp_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="otp_box_1,otp_box_2,otp_box_3,otp_box_4" />

    <Button
        android:id="@+id/btn_validate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/approve"
        android:text="Validate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/otp_box_1" />

    <TextView
        android:id="@+id/new_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="New Password:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_validate" />

    <EditText
        android:id="@+id/et_new_password"
        android:layout_width="343dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:hint="Enter New Password"
        android:inputType="textPassword"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.583"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_password" />

    <TextView
        android:id="@+id/confirm_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Confirm Password:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_new_password" />

    <EditText
        android:id="@+id/et_confirm_password"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/confirm_password" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/approve"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_confirm_password"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>
