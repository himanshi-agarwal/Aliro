<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmpHomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">

        <include
            layout="@layout/appbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/profile"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@drawable/bottom_corners">

                    <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="127dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="145dp"
                        app:cardCornerRadius="150dp">

                        <ImageView
                            android:id="@+id/account"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:background="@drawable/circular_background"
                            android:padding="0dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/account" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/emp_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="160dp"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/exo_2_semibold"
                        android:gravity="center"
                        android:text="Himanshi Agarwal"
                        android:textColor="#000000"
                        android:textSize="33sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/user_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_italic"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="Employee"
                        android:layout_marginTop="210dp"
                        android:textColor="#000000"
                        android:textSize="22sp" />

                </RelativeLayout>

                    <LinearLayout
                        android:layout_marginTop="250dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="18dp">

                        <TextView
                            android:id="@+id/emp_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="himanshi@gmail.com"
                            android:textColor="#000000"
                            android:layout_marginTop="20dp"
                            android:textSize="22sp"
                            android:fontFamily="@font/lato_italic"
                            android:layout_marginBottom="10dp"
                            android:drawablePadding="20dp"
                            android:drawableStart="@drawable/email"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#808080"/>

                        <TextView
                            android:id="@+id/emp_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="10dp"
                            android:text="9125555228"
                            android:fontFamily="@font/lato_italic"
                            android:textColor="#000000"
                            android:textSize="22sp"
                            android:drawablePadding="20dp"
                            android:drawableStart="@drawable/phone"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#808080"/>

                        <TextView
                            android:id="@+id/emp_role"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:text="Manager"
                            android:fontFamily="@font/lato_italic"
                            android:layout_marginBottom="10dp"
                            android:textColor="#000000"
                            android:textSize="22sp"
                            android:drawablePadding="20dp"
                            android:drawableStart="@drawable/role" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#808080"/>

                        <TextView
                            android:id="@+id/emp_company"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/lato_italic"
                            android:text="Google"
                            android:textColor="#000000"
                            android:layout_marginBottom="10dp"
                            android:textSize="22sp"
                            android:drawablePadding="20dp"
                            android:drawableStart="@drawable/company"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#808080"/>

                        <TextView
                            android:id="@+id/emp_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:text="Bengaluru"
                            android:fontFamily="@font/lato_italic"
                            android:textColor="#000000"
                            android:textSize="22sp"
                            android:drawablePadding="20dp"
                            android:drawableStart="@drawable/location" />

                    </LinearLayout>
            </RelativeLayout>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navbar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:layout_marginTop="25dp"
        app:headerLayout="@layout/header"
        app:menu="@menu/emp_menu">

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>