<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".VisitorHomeActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/other"
        android:fitsSystemWindows="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/bottom_corners">

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="127dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginStart="145dp"
                app:cardCornerRadius="150dp">

                <ImageView
                    android:id="@+id/user_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:src="@drawable/account"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circular_background"
                    android:padding="0dp" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/visitor_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="155dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/exo_2_semibold"
                android:gravity="center"
                android:text="Vis_name"
                android:textColor="#000000"
                android:textSize="33sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_italic"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Visitor"
                android:layout_marginTop="210dp"
                android:textColor="#000000"
                android:textSize="18sp" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:fitsSystemWindows="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="18dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="15dp">

                        <ImageButton
                            android:id="@+id/pre_register"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/add_guest"
                            android:scaleType="fitXY"
                            android:background="@color/white"
                            android:adjustViewBounds="true"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Register a Visit"
                            android:padding="10dp"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:fontFamily="@font/bangers"
                            android:textColor="@color/secondary"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="15dp">

                        <ImageButton
                            android:id="@+id/diary"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/diary"
                            android:scaleType="fitXY"
                            android:background="@color/white"
                            android:adjustViewBounds="true"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Visitor Diary"
                            android:padding="10dp"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:fontFamily="@font/bangers"
                            android:textColor="@color/secondary"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="15dp">

                        <ImageButton
                            android:id="@+id/parking"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/parking"
                            android:scaleType="fitXY"
                            android:background="@color/white"
                            android:adjustViewBounds="true"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Parking"
                            android:padding="10dp"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:fontFamily="@font/bangers"
                            android:textColor="@color/secondary"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="15dp">

                        <ImageButton
                            android:id="@+id/logs"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/logs"
                            android:scaleType="fitXY"
                            android:background="@color/white"
                            android:adjustViewBounds="true"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Logs"
                            android:padding="10dp"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:fontFamily="@font/bangers"
                            android:textColor="@color/secondary"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="15dp">

                        <ImageButton
                            android:id="@+id/notification"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/notifications"
                            android:scaleType="fitXY"
                            android:background="@color/white"
                            android:adjustViewBounds="true"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Notifications"
                            android:padding="10dp"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:fontFamily="@font/bangers"
                            android:textColor="@color/secondary"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>