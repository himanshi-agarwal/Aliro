<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Aliro"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Aliro.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="Login"
            android:theme="@style/Theme.Aliro.NoActionBar">
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:exported="true"
            android:label="SignUp"
            android:theme="@style/Theme.Aliro.NoActionBar">
        </activity>
        <activity
            android:name=".VisitorHomeActivity"
            android:exported="false"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".EmpHomeActivity"
            android:exported="false"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".NotificationActivity"
            android:exported="false"
            android:label="Notifications">
        </activity>
        <activity
            android:name=".LogsActivity"
            android:exported="false"
            android:label="Logs">
        </activity>
        <activity
            android:name=".EmpEditActivity"
            android:exported="false"
            android:label="Edit Profile">
        </activity>
        <activity
            android:name=".AdminEditActivity"
            android:exported="false"
            android:label="Edit Employee Details">
        </activity>
        <activity
            android:name=".AboutActivity"
            android:exported="false"
            android:label="About">
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
</manifest>