<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions for Internet and accessing the map -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.WRITE_MEDIA_IMAGES" />

    <!-- Permissions for location if showing user's location on the map -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Aliro"
        tools:targetApi="31">

        <!-- Include Google Maps API key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value = "AIzaSyBfUTQ09GW3jRNdyyeztir2cxcF-pPX9T0" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Aliro.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Other activity declarations remain the same -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="Login"
            android:theme="@style/Theme.Aliro.NoActionBar" />

        <activity
            android:name=".SignUpActivity"
            android:exported="true"
            android:label="SignUp"
            android:theme="@style/Theme.Aliro.NoActionBar" />

        <activity
            android:name=".EmpHomeActivity"
            android:exported="false"
            android:label="@string/app_name" />

        <activity
            android:name=".NotificationActivity"
            android:exported="false"
            android:label="Notifications" />



        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>
</manifest>
